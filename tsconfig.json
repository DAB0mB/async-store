{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
