{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "module": "Node16",
    "moduleResolution": "node16",

    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,

    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
